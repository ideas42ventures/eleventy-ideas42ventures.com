{% macro person_card(person) %}
<div class="card" id="{% slugify person.name %}">
  <img class="person__img" src="/images/people/{{ person.img }}" alt="">
  <div class="person__info">
    {% if person.team %}<small class="person__team">{{ person.team }}</small>{% endif %}
    <h3 class="person__name">{{ person.name }}</h3>
    <p class="person__focus">
      {{ person.role }}
    </p>
  </div>
</div>
{% endmacro %}